{% extends 'base.html.twig' %}

{% block title %}Nouvel album{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer un nouvel album</h1>

        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom de l\'album') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.year, 'Année de sortie') }}
                        {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
                    </div>
                     <div class="form-group">
                        {{ form_label(form.artist, 'Artiste') }}
                        {{ form_widget(form.artist, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Créer</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>

        <a href="{{ path('app_web_album_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
{% endblock %}
