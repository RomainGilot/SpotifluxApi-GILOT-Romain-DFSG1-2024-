{% extends 'base.html.twig' %}

{% block title %}Modifier l'album{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier l'album</h1>

        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom de l\'album') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.year, 'Ann√©e de sortie') }}
                        {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
                    </div>
                     <div class="form-group">
                        {{ form_label(form.artist, 'Artiste') }}
                        {{ form_widget(form.artist, {'attr': {'class': 'form-control'}}) }}
                    </div>
                        {{ include('web/album/_form.html.twig', {'button_label': 'Modifier'}) }}

                    {{ form_end(form) }}
                </form>
            </div>
        </div>

        <a href="{{ path('app_web_album_index') }}" class="btn btn-secondary mt-3">Annuler</a>

        {{ include('web/album/_delete_form.html.twig') }}
    </div>
{% endblock %}
