{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'album</h1>

        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">#</th>
                        <td>{{ album.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ album.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Année</th>
                        <td>{{ album.year }}</td>
                    </tr>
                  <tr>
                        <th scope="row">Artistes</th>
                        <td>
                            {% for artist in album.artist %}
                                {{artist.name}},
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_web_album_index') }}" class="btn btn-primary">Retour en arrière</a>

        <a href="{{ path('app_web_album_edit', {'id': album.id}) }}" class="btn btn-secondary">Modifier</a>

        {{ include('web/album/_delete_form.html.twig') }}
    </div>
{% endblock %}
