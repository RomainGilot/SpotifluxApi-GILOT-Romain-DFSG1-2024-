{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'artiste</h1>

        <div class="table-responsive"> 
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ artist.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ artist.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Albums</th>
                        <td>
                            {% for album in artist.albums %}
                                {{album.name}},
                            {% endfor %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_web_artist_index') }}" class="btn btn-primary">Revenir en arrière</a>

        <a href="{{ path('app_web_artist_edit', {'id': artist.id}) }}" class="btn btn-secondary">Modifier</a>

        {{ include('web/artist/_delete_form.html.twig') }}
    </div>
{% endblock %}
