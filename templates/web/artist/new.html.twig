{% extends 'base.html.twig' %}

{% block title %}Nouvel artiste{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer un nouvel artiste</h1>

        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.name, 'Nom de l\'artiste') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.albums, 'Albums') }}
                        {{ form_widget(form.albums, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary mt-5">Créer</button>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>

        <a href="{{ path('app_web_artist_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
{% endblock %}
